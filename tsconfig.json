{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true
  },
  "include": ["index.ts", "types.ts", "utils.ts", "src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 